body
  padding-top 60px

footer
  padding-left 15px
  padding-right 15px
  p
    border-top 1px solid #d7e0e2

gametitle
  font-size 30px


.navbar-brand
  font-size: 20pt
  color: white !important

.nav-link
  font-size: 14pt;
  margin-top: 2px;

  .form-group
    margin-left 10px
  button
    margin-left 10px

.top-padding-med
  padding-top 10px

.margin-left-med
  margin-left 10px

.toast-top-right
  top 70px

.toast-success
  background-color #13987e

.container
  text-align center

.container .jumbotron
  background #3f51b5 url("../pics/frontback.jpg") center
  color white
  text-align center
  margin-bottom 10px

.navbar.navbar-inverse.navbar-fixed-top
  background: #3f51b5
  margin 0

.dropdown-toggle
  background: #3f51b5

.card
  box-shadow 0 4px 8px 0 rgba(0,0,0,0.2)
  transition 0.3s
  border 1px solid darkgray
  border-radius 4px
  text-align center
  margin-bottom 12px
  padding 20px
  &:hover
    box-shadow 0 8px 16px 0 rgba(0,0,0,0.2)

.card-title
  font-size 18pt
  font-weight bold
  margin 10px

.btn-primary, .btn-primary:hover, .btn-primary:active, .btn-primary:visited
  background-color #3f51b5
  border-color: #3f51b5

.panel-primary
  & > .panel-heading
    color #fff
    background-color #3f51b5
    border-color #3f51b5
    font-size 14pt

.navbar-inverse
  .navbar-nav
    & > li
      & > a
        color white

.navbar-inverse .navbar-nav > .open > a, .navbar-inverse .navbar-nav > .open > a:hover, .navbar-inverse .navbar-nav > .open > a:focus
  background-color #3f51b5

.navbar-form
    margin 0

.form-group
  margin 8px

.btn-login
  margin-top 8px