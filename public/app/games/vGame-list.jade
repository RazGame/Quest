.container.top-padding-med
  .pull-right
    form.form-inline
      .form-group
        input.form-control(ng-model="searchText", placeholder="Поиск")
      .form-group.margin-left-med
        select.form-control(ng-model="sortOrder", ng-options="item.value as item.text for item in sortOptions")
  table.table.table-hover.table-striped.table-condensed
    thead
      tr
        th Название
        th Город
        th Дата начала
        th Дата окончания
        th Взнос
    tbody
      tr(ng-repeat="game in games | filter:searchText | orderBy:sortOrder")
        td
          a(href="/games/{{game._id}}") {{game.title}}
        td {{game.city}}
        td {{game.dateofstart}}
        td {{game.dateofend}}
        td {{game.deposit}}